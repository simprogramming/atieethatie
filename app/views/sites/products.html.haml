%body#products_page
  #carouselExampleSlidesOnly.carousel.slide{"data-bs-ride" => "carousel"}
    .carousel-inner
      .carousel-item.active{"data-bs-interval" => "12000"}
        = image_tag "banner9.jpg", class: 'banner-image2 d-block w-100'
      .carousel-item{"data-bs-interval" => "12000"}
        = image_tag "banner10.jpg", class: 'banner-image2 d-block w-100'
      .carousel-item{"data-bs-interval" => "10000"}
        = image_tag "banner6.jpg", class: 'banner-image2 d-block w-100'
      .carousel-item{"data-bs-interval" => "10000"}
        = image_tag "banner5.jpg", class: 'banner-image2 d-block w-100'
      .carousel-item{"data-bs-interval" => "7000"}
        = image_tag "banner11.jpg", class: 'banner-image2 d-block w-100'
      .carousel-item{"data-bs-interval" => "7000"}
        = image_tag "banner12.jpg", class: 'banner-image2 d-block w-100'


  %section.cards-section
    .row.mx-auto.container.mt-4
      .col-12
        %nav{ aria: { label: "breadcrumb" } }
          %ol.breadcrumb
            %li.breadcrumb-item.active{ "aria-current" => "page" }
              = t(".store")

    .row.py-3.products-container
      .col-xl-3.col-12
        = render "sites/components/store_filter"


      .col-xl-8.col-12
        .container
          .row
            - 9.times do
              .col-md-4.card-container
                .card
                  = image_tag "original.jpeg", class: "card-img-top"
                  .card-body
                    %h5.card-title Nom du produit
                    .d-flex
                      %a{href: "#"} En savoir plus
                      %p 12$
