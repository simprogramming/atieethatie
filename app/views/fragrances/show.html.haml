- model_class = Fragrance
- content_for :title do
  %h1= t '.title', :default => model_class.model_name.human

%dl.row
  %dt.col-sm-3= model_class.human_attribute_name :name_fr
  %dd.col-sm-9= fragrance.name_fr
  %dt.col-sm-3= model_class.human_attribute_name :name_en
  %dd.col-sm-9= fragrance.name_en
  %dt.col-sm-3= FragranceProfile.model_name.human
  %dd.col-sm-9= fragrance.fragrance_profile.name_fr



- if policy(fragrance).index?
  = link_to fragrances_url, class: "btn btn-outline-secondary mx-1" do
    %i.fa-solid.fa-chevron-left
    = t('.back', :default => t("helpers.links.back"))

- if policy(fragrance).edit?
  = link_to edit_fragrance_url(@fragrance), class: "btn btn-primary mx-1" do
    %i.fa-solid.fa-edit
    = t('.edit', :default => t("helpers.links.edit"))
